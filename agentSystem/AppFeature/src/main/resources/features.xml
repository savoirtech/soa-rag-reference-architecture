<features name="agent" xmlns="http://karaf.apache.org/xmlns/features/v1.4.0">

    <repository>mvn:org.apache.cxf.karaf/apache-cxf/${cxf.version}/xml/features</repository>

    <!-- Agent -->

    <feature name="agent" version='${project.version}'>
        <feature dependency="true">http</feature>
        <feature dependency="true">aries-blueprint</feature>
        <feature dependency="true">cxf-core</feature>
        <feature dependency="true">cxf-jaxrs</feature>
        <conditional>
            <condition>cxf-jaxrs</condition>
            <bundle dependency="true">mvn:commons-io/commons-io/2.15.1</bundle>
            <bundle dependency="true">wrap:mvn:org.apache.commons/commons-compress/1.27.1</bundle>
            <bundle dependency="true">wrap:mvn:com.google.code.gson/gson/2.11.0</bundle>
            <bundle dependency="true">wrap:mvn:com.knuddels/jtokkit/1.1.0</bundle>
            <bundle dependency="true">mvn:com.fasterxml.jackson.core/jackson-core/2.15.0</bundle>
            <bundle dependency="true">mvn:com.fasterxml.jackson.core/jackson-annotations/2.15.0</bundle>
            <bundle dependency="true">mvn:com.fasterxml.jackson.core/jackson-databind/2.15.0</bundle>
            <bundle start-level="85">mvn:com.savoir.soa.rag.ref.arch/AppApi/${project.version}</bundle>
            <bundle start-level="85">mvn:com.savoir.soa.rag.ref.arch/AppAgent/${project.version}</bundle>
            <bundle start-level="85">mvn:com.savoir.soa.rag.ref.arch/AppImpl/${project.version}</bundle>
        </conditional>
        <!--
        <feature>war</feature>
        <feature>webconsole</feature>
        <conditional>
            <condition>http</condition>
            <condition>aries-blueprint</condition>
            <condition>cxf-core</condition>
            <condition>cxf-jaxrs</condition>
            <condition>war</condition>
            <condition>webconsole</condition>
            <bundle start-level="85">webbundle:mvn:com.savoir.soa.rag.ref.arch/AppWar/${project.version}/war?Web-ContextPath=ai</bundle>
        </conditional>
        -->
    </feature>

</features>
